  "devDependencies": {
    "awesome-typescript-loader": "3.2.3",
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "cache-loader": "^1.0.3",
    "copy-webpack-plugin": "^4.1.1",
    "eslint": "^4.8.0",
    "eslint_d": "^5.1.0",
    "file-loader": "^1.1.5",
    "husky": "^0.14.3",
    "jade-loader": "^0.8.0",
    "lint-staged": "^4.2.3",
    "nodemon": "^1.12.1",
    "prettier": "1.7.4",
    "ts-loader": "^2.3.4",
    "tsd": "0.6.5",
    "typescript": "2.4.2",
    "webpack": "3.5.5"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "precommit": "lint-staged",
    "lint": "prettier --trailing-comma all --no-semi --write \"src/**/*.@(ts|less|css)\" && eslint_d --fix src",
    "build": "webpack --watch",
    "prod": "webpack",
    "server": "nodemon dist/app",
    "start": "yarn build"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --trailing-comma all --no-semi --write",
      "tslint --fix",
      "git add"
    ],
    "src/**/*.@(css|less)": [
      "prettier --trailing-comma all --no-semi --write",
      "git add"
    ]
  }
}
